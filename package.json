{
  "name": "twrpg_helper",
  "version": "1.0.1",
  "description": "helper application for twrpg map of warcraft 3",
  "main": "index.js",
  "scripts": {
    "dev": "set NODE_ENV=development& concurrently --kill-others \"nuxt dev\" \"electron .\"",
    "generate": "nuxt generate",
    "start": "electron-forge start",
    "deploy": "push-dir --dir=dist --branch=gh-pages --cleanup",
    "electron": "electron .",
    "pack": "nuxt generate && electron-builder --dir",
    "dist": "nuxt generate && electron-builder"
  },
  "type": "module",
  "author": "rubystarashe",
  "license": "ISC",
  "dependencies": {
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "@voces/wc3maptranslator": "^4.0.3",
    "@vue-macros/nuxt": "^1.9.30",
    "@vueuse/nuxt": "^10.9.0",
    "concurrently": "^8.2.2",
    "electron": "^30.0.2",
    "electron-builder": "^24.13.3",
    "nuxt": "^3.11.2",
    "push-dir": "^0.4.1",
    "sass": "^1.54.6",
    "scss": "^0.2.4"
  },
  "build": {
    "appId": "com.example.twrpg_helper",
    "artifactName": "twrpg_helper-${version}.${ext}",
    "productName": "더월드 도우미",
    "files": [
      "!.nuxt/**",
      "!generator/**",
      "!public/**",
      "!legacy/**",
      "!package/**",
      "!app.vue",
      "!components/**",
      "!nuxt.config.js"
    ],
    "directories": {
      "output": "package"
    },
    "win": {
      "target": "nsis"
    }
  }
}
